{
  "name": "Pretty OkCupid",
  "short_name": "Pretty_Okc",
  "version": "0.1",
  "manifest_version": 2,
  "description": "UX / Styling improvements for OkCupid.",
  "homepage_url": "http://www.mpelletier.net",
  "options_page": "options.html",
  "permissions": ["tabs", "http://*.okcupid.com/*"],
  "background": {
    "scripts": ["js/background.js"]
  },
  "browser_action": {
    "default_icon": "images/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["http://www.okcupid.com/match*", "http://www.okcupid.com/profile/*"],
      "js": [
        "js/jquery-1.10.2.min.js",
        "js/mutation-summary.min.js",
        "js/jquery.dotdotdot.min.js",
        "js/init.js"
        ],
      "run_at": "document_end"
    }
  ]
}
